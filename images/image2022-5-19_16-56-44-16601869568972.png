    <title>酷家乐 SSO 登录</title>
    <script>
        var loginUrl = '/__sso/api/ssologin/';

        if (!window.location.origin) {
            window.location.origin = window.location.protocol + "//" + window.location.hostname + (window.location.port ? ':' + window.location.port : '');
        }

        function setXhrUrlHeaders(xhr) {
            var searchObj = getSearchParams();
            if (!searchObj) {
                return;
            }
            if (searchObj.backurl) {
                xhr.setRequestHeader("AuthNet-Back-Url", decodeURIComponent(searchObj.backurl));
            }
            if (searchObj.nexturl) {
                xhr.setRequestHeader("AuthNet-NEXT-Url", decodeURIComponent(searchObj.nexturl));
            }
            if (searchObj.nexturlv2) {
                xhr.setRequestHeader("AuthNet-NEXT-Url-V2", decodeURIComponent(searchObj.nexturlv2));
            }
        }

        /**
         * 自动登录
         */
        function autoLogin() {
            // 如果自动登录太频繁了，停止自动登录
            var redirectHostName = getRedirectHostName();
            if (isAutoLoginTooFrequently(redirectHostName)) {
                new Notyf({
                    duration: 10000,
                    position: {x: 'right', y: 'top'},
                })
                    .error('登陆存在问题，循环跳转？请尝试清理 ' + redirectHostName + ' 的 Cookie，或求助 IT 桌面运维');
                return;
            }
            var xhr = new XMLHttpRequest();
            xhr.open('POST', '/__sso/api/ssoautologin');
            setXhrUrlHeaders(xhr);
            xhr.send();
            xhr.onreadystatechange = function (event) {
                if (xhr.readyState === 4 && xhr.status === 200) {
                    try {
                        var res = JSON.parse(xhr.response);
                        if (res.c === '0') {
                            // 请求成功
                            var redirectUrl = redirect(res.d);
                            if (redirectUrl) {
                                setAutoLoginAt(redirectHostName, new Date());
                                location.replace(redirectUrl);
                            }
                        } else {
                            console.log('auto login fail');
                        }
                    } catch (err) {
                        console.log('auto login fail');
                    }
                }
            }
        }

        $(document).ready(function () {
            autoLogin();
        })
    </script>
