<script>
    // 确保 iOS 下也禁止缩放
    // see https://juejin.im/post/5b46ec375188251ac9767094
    document.addEventListener('touchstart', function (event) {
        if (event.touches.length > 1) {
            event.preventDefault();
        }
    });
    var lastTouchEnd = 0;
    document.addEventListener('touchend', function (event) {
        var now = (new Date()).getTime();
        if (now - lastTouchEnd <= 300) {
            event.preventDefault();
        }
        lastTouchEnd = now;
    }, false);
    document.addEventListener('gesturestart', function (event) {
        event.preventDefault();
    });

    /**
     * 登录成功
     */
    function loginSuccess(res) {
        var redirectUrl = redirect(res.d);
        if (redirectUrl) {
            location.replace(redirectUrl);
        } else {
            alert('错误的访问方式');
        }
    }

    /**
     * 登录
     * @param {string} username - 用户名
     * @param {string} password - 密码
     */
    function login(username, password) {
        var xhr = new XMLHttpRequest();
        xhr.open('POST', loginUrl);
        setXhrUrlHeaders(xhr);
        xhr.setRequestHeader('content-type', 'application/json');
        xhr.send(JSON.stringify({
            uid: username,
            pswd: password,
        }));
        xhr.onreadystatechange = function (event) {
            if (xhr.readyState === 4 && xhr.status === 200) {
                try {
                    var res = JSON.parse(xhr.response);
                    if (res.c === '0') {
                        // 请求成功
                        loginSuccess(res);
                        return;
                    } else {
                        alert(res.m);
                    }
                } catch (err) {
                    alert('登录失败');
                }
            }
        }
    }

    document.body.onload = function () {
        var loginBtn = document.getElementById('loginBtn');
        var usernameInput = document.getElementById('username');
        var passwordInput = document.getElementById('password');

        var usernameContainer = document.querySelector('.form-group--username');
        var passwordContainer = document.querySelector('.form-group--password');
        loginBtn.onclick = function (event) {
            event.preventDefault();
            var username = usernameInput.value;
            var password = passwordInput.value;
            if (!username) {
                usernameContainer.className += ' has-error';
                return;
            } else {
                usernameContainer.className = 'form-group form-group--username';
            }
            if (!password) {
                passwordContainer.className += ' has-error';
                return;
            } else {
                passwordContainer.className = 'form-group form-group--password';
            }
            login(username, password);
        };


        // 最后点击的 HTML 元素，不包括 icon
        // 用来输入密码时，点击眼睛图标后，将焦点 set 回密码输入框
        var lastClickedElement = null;
        $(document).on('click', function (e) {
            var $target = $(e.target);
            if ($target.attr("class") === "icon" || $target.attr("id") === "password__toggle__icon") {
                return;
            }
            lastClickedElement = e.target;
        });

        $("#password__toggle").on('click', function () {
            var $pwd = $("#password");
            var pwdFocused = false;
            if (lastClickedElement) {
                pwdFocused = $(lastClickedElement).attr("id") === $pwd.attr("id");
            }
            if ($pwd.attr("type") === "password") {
                $pwd.attr("type", "text");
                $("#password__toggle__icon").attr("xlink:href", "#icon-eye1");
            } else {
                $pwd.attr("type", "password");
                $("#password__toggle__icon").attr("xlink:href", "#icon-eye");
            }
            // 如果点击眼睛按钮前 focus 在密码输入框，则重新 focus 回去
            pwdFocused && $pwd.focus();
        });
    };

    document.onkeyup = function (e) {
        var ev = document.all ? window.event : e;
        var loginBtn = document.getElementById('loginBtn');
        if (ev.keyCode == 13) {
            loginBtn.click();
        }
    };
</script>
